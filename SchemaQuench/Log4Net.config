<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <log4net>
        <appender name="console" type="log4net.Appender.ManagedColoredConsoleAppender">
            <mapping>
                <level value="INFO" />
                <forecolor value="Green" />
            </mapping>
            <mapping>
                <level value="WARN" />
                <forecolor value="Yellow" />
            </mapping>
            <mapping>
                <level value="ERROR" />
                <forecolor value="Red" />
            </mapping>
            <mapping>
                <level value="DEBUG" />
                <forecolor value="Blue" />
            </mapping>
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%date - %message%newline" />
            </layout>
        </appender>
        <appender name="ProgressLog" type="log4net.Appender.FileAppender">
            <file type="log4net.Util.PatternString" value="%property{LogPath}/SchemaQuench - Progress.log" />
            <appendToFile value="false" />
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%date - %message%newline" />
            </layout>
        </appender>
	    <logger name="ProgressLog">
		    <appender-ref ref="console" />
		    <appender-ref ref="ProgressLog" />
	    </logger>
	    <appender name="ErrorLog" type="log4net.Appender.FileAppender">
		    <file type="log4net.Util.PatternString" value="%property{LogPath}/SchemaQuench - Errors.log" />
			<appendToFile value="false" />
		    <layout type="log4net.Layout.PatternLayout">
			    <conversionPattern value="%date - %message%newline" />
		    </layout>
	    </appender>
	    <logger additivity="false" name="ErrorLog">
		    <appender-ref ref="ErrorLog" />
	    </logger>
    </log4net>
</configuration>